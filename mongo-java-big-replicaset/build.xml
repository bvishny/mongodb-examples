<project name="mongo-java-big-replicaset" default="usage" basedir="./" xmlns:aspectj="antlib:org.aspectj">

    <!-- ******************************************************************* -->
    <!-- Set the base attributes.                                            -->
    <!-- ******************************************************************* -->

    <property name="dir.build" value="build"/>
    <property name="dir.build.java" value="${dir.build}/java/classes"/>

    <property name="dir.src" value="src"/>
    <property name="dir.src.java" value="src/main"/>
    <property name="dir.lib" value="lib"/>

    <property file="build.properties" prefix="build.conf"/>

    <property environment="env"/>

    <path id="classpath.all"><fileset dir="${dir.lib}"><include name="*.jar"/></fileset></path>
    <path id="classpath.cp"><pathelement location="${dir.build.java}"/></path>

    <!-- ******************************************************************* -->
    <!-- Remove the build directory.                                         -->
    <!-- ******************************************************************* -->

    <target name="clean"><delete dir="${dir.build}"/></target>

    <!-- ******************************************************************* -->
    <!-- Compile the java classes.                                           -->
    <!-- ******************************************************************* -->

    <target name="compile">
        <mkdir dir="${dir.build.java}"/>
        <javac  destdir="${dir.build.java}"
                target="${build.conf.javac.source}"
                debug="true" encoding="UTF-8"
                classpathref="classpath.cp"
                source="${build.conf.javac.source}"
                includeantruntime="false"
                debuglevel="lines,vars,source">

            <src path="${dir.src.java}"/>
            <compilerarg value="-Xlint:all,-fallthrough"/>
            <classpath refid="classpath.all"/>
        </javac>
    </target>

    <!-- ******************************************************************* -->
    <!-- Run the examples. Mongo must be running to work.                    -->
    <!-- ******************************************************************* -->

    <target name="run" depends="compile">

        <junit fork="yes" haltonfailure="true">
            <jvmarg value="-Duser.timezone=GMT"/>
            <jvmarg value="-Dfile.encoding=UTF-8"/>
            <jvmarg value="-DsocksProxyHost"/>
            <jvmarg value="-DsocksProxtPort"/>
            <jvmarg value="-Dhttps.proxyHost"/>
            <jvmarg value="-Dhttp.proxyHost"/>

            <classpath refid="classpath.all"/>

            <classpath><pathelement path="${dir.build.java}"/></classpath>

            <formatter type="brief" usefile="false"/>

            <batchtest todir=".">
                <fileset dir="${dir.build.java}">
                    <include name="**/ReplicaSetMultipleSecondariesExample.class"/>
                </fileset>
            </batchtest>
        </junit>
    </target>

    <!-- ******************************************************************* -->
    <!-- Run the first mongo server.                                         -->
    <!-- ******************************************************************* -->

    <target name="mongo0">
        <antcall target="mongo">
            <param name="mongo.port" value="27017"/>
            <param name="mongo.dir.db" value="${dir.build}/data/r0"/>
            <param name="mongo.replica.set.name" value="aws1"/>
        </antcall>
    </target>

    <!-- ******************************************************************* -->
    <!-- Run the second mongo server.                                        -->
    <!-- ******************************************************************* -->

    <target name="mongo1">
        <antcall target="mongo">
            <param name="mongo.port" value="27018"/>
            <param name="mongo.dir.db" value="${dir.build}/data/r1"/>
            <param name="mongo.replica.set.name" value="aws1"/>
        </antcall>
    </target>

    <!-- ******************************************************************* -->
    <!-- Run the arbiter server.                                             -->
    <!-- ******************************************************************* -->

    <target name="arbiter0">
        <antcall target="mongo">
            <param name="mongo.port" value="27019"/>
            <param name="mongo.dir.db" value="${dir.build}/data/a0"/>
            <param name="mongo.replica.set.name" value="aws1"/>
        </antcall>
    </target>


    <!-- ******************************************************************* -->
    <!-- Run the second mongo server.                                        -->
    <!-- ******************************************************************* -->

    <target name="mongo1">
        <antcall target="mongo">
            <param name="mongo.port" value="27020"/>
            <param name="mongo.dir.db" value="${dir.build}/data/r2"/>
            <param name="mongo.replica.set.name" value="aws1"/>
        </antcall>
    </target>


    <!-- ******************************************************************* -->
    <!-- Run the second mongo server.                                        -->
    <!-- ******************************************************************* -->

    <target name="mongo1">
        <antcall target="mongo">
            <param name="mongo.port" value="27021"/>
            <param name="mongo.dir.db" value="${dir.build}/data/r3"/>
            <param name="mongo.replica.set.name" value="aws1"/>
        </antcall>
    </target>

        <!-- ******************************************************************* -->
    <!-- Run the second mongo server.                                        -->
    <!-- ******************************************************************* -->

    <target name="mongo1">
        <antcall target="mongo">
            <param name="mongo.port" value="27022"/>
            <param name="mongo.dir.db" value="${dir.build}/data/r4"/>
            <param name="mongo.replica.set.name" value="aws2"/>
        </antcall>
    </target>

        <!-- ******************************************************************* -->
    <!-- Run the second mongo server.                                        -->
    <!-- ******************************************************************* -->

    <target name="mongo1">
        <antcall target="mongo">
            <param name="mongo.port" value="27023"/>
            <param name="mongo.dir.db" value="${dir.build}/data/r5"/>
            <param name="mongo.replica.set.name" value="aws2"/>
        </antcall>
    </target>

        <!-- ******************************************************************* -->
    <!-- Run the second mongo server.                                        -->
    <!-- ******************************************************************* -->

    <target name="mongo1">
        <antcall target="mongo">
            <param name="mongo.port" value="27024"/>
            <param name="mongo.dir.db" value="${dir.build}/data/a1"/>
            <param name="mongo.replica.set.name" value="aws2"/>
        </antcall>
    </target>

        <!-- ******************************************************************* -->
    <!-- Run the second mongo server.                                        -->
    <!-- ******************************************************************* -->

    <target name="mongo1">
        <antcall target="mongo">
            <param name="mongo.port" value="27025"/>
            <param name="mongo.dir.db" value="${dir.build}/data/r6"/>
            <param name="mongo.replica.set.name" value="aws2"/>
        </antcall>
    </target>

    <!-- ******************************************************************* -->
    <!-- Run a mongo server (expects params).                                -->
    <!-- ******************************************************************* -->

    <target name="mongo">
        <mkdir dir="${mongo.dir.db}"/>
        <exec executable="mongod">
            <arg value="--replSet"/>
            <arg value="${mongo.replica.set.name}"/>
            <arg value="--rest"/>
            <arg value="--port"/>
            <arg value="${mongo.port}"/>
            <arg value="--dbpath"/>
            <arg value="${mongo.dir.db}"/>

            <!--
            <arg value=" - -keyFile"/>
            <arg value="mykey"/>
            -->
        </exec>
    </target>

    <!-- ******************************************************************* -->
    <!-- Describe the build file usage.                                      -->
    <!-- ******************************************************************* -->

    <target name="usage">
<echo>
----------------------------------------

- Compile the Java files ......................... compile

- Clean the source tree .......................... clean (deletes Mongo db files too)

- Run the first Mongo server ..................... mongo0

- Run the second Mongo server .................... mongo1

- Run the third Mongo server ..................... mongo2

- Run the examples ............................... run

----------------------------------------
</echo>
    </target>

    <!-- ******************************************************************* -->

</project>
